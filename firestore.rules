rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isSupervisor() {
      return isAdmin() || (isSignedIn() && request.auth.token.supervisor == true);
    }

    function hasActiveCoachSubscription(uid) {
      let subPath = /databases/$(database)/documents/coachSubscriptions/$(uid);
      let sub = get(subPath);
      return sub != null && (
        sub.data.isSupervisor == true ||
        (sub.data.status == 'trial_active' && sub.data.trialEndsAt > request.time) ||
        (sub.data.status == 'active_paid' && sub.data.subscriptionEndsAt > request.time)
      );
    }

    function isTrainer() {
      return hasRole('trainer');
    }

    function isCoach() {
      return isAdmin() || (isTrainer() && (request.auth.token.supervisor == true || hasActiveCoachSubscription(request.auth.uid)));
    }

    function isClient() {
      return hasRole('client');
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function canAccessPair(trainerId, clientId) {
      return isSignedIn() && (
        isAdmin() ||
        (request.auth.uid == trainerId && isCoach()) ||
        request.auth.uid == clientId
      );
    }

    function isPlanAssignedToClient() {
      return isSignedIn() &&
        resource.data.assignedClientIds is list &&
        request.auth.uid in resource.data.assignedClientIds;
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isCoach();
      allow create: if isOwner(userId) && request.resource.data.uid == request.auth.uid;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      match /private/{docId} {
        allow read: if isOwner(userId) || isAdmin() || (isCoach() && docId == 'onboarding');
        allow write: if isOwner(userId) || isAdmin() || (isCoach() && docId == 'onboarding');
      }
    }

    match /trainerClients/{pairId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        request.auth.uid == resource.data.trainerId ||
        request.auth.uid == resource.data.clientId
      );

      allow create: if isCoach() &&
        hasActiveCoachSubscription(request.auth.uid) &&
        request.resource.data.trainerId == request.auth.uid &&
        request.resource.data.clientId is string;

      allow update: if isAdmin() ||
        (isCoach() && hasActiveCoachSubscription(request.auth.uid) && request.auth.uid == resource.data.trainerId);

      allow delete: if isAdmin();
    }

    match /plans/{planId} {
      allow read: if isSignedIn() && (
        canAccessPair(resource.data.trainerId, resource.data.clientId) ||
        isPlanAssignedToClient()
      );

      allow create: if isCoach() &&
        hasActiveCoachSubscription(request.auth.uid) &&
        request.resource.data.trainerId == request.auth.uid &&
        (!('clientId' in request.resource.data) || request.resource.data.clientId is string) &&
        (!('assignedClientIds' in request.resource.data) || request.resource.data.assignedClientIds is list) &&
        request.resource.data.status in ['draft', 'active', 'archived'];

      allow update: if isAdmin() ||
        (isCoach() && hasActiveCoachSubscription(request.auth.uid) && request.auth.uid == resource.data.trainerId) ||
        (isClient() && (request.auth.uid == resource.data.clientId || isPlanAssignedToClient()) &&
          request.resource.data.diff(resource.data).changedKeys().hasOnly(['clientNotes', 'lastViewedAt'])
        );

      allow delete: if isAdmin() ||
        (isCoach() && hasActiveCoachSubscription(request.auth.uid) && request.auth.uid == resource.data.trainerId);
    }

    match /workoutLogs/{logId} {
      allow read: if isSignedIn() && canAccessPair(resource.data.trainerId, resource.data.clientId);

      allow create: if isClient() &&
        request.resource.data.clientId == request.auth.uid &&
        request.resource.data.trainerId is string;

      allow update: if isAdmin() ||
        (isClient() && request.auth.uid == resource.data.clientId) ||
        (isCoach() && hasActiveCoachSubscription(request.auth.uid) && request.auth.uid == resource.data.trainerId &&
          request.resource.data.diff(resource.data).changedKeys().hasOnly(['trainerFeedback', 'updatedAt'])
        );

      allow delete: if isAdmin();
    }

    match /sessions/{sessionId} {
      allow read: if isSignedIn() && canAccessPair(resource.data.trainerId, resource.data.clientId);
      allow create, update: if isCoach() && hasActiveCoachSubscription(request.auth.uid) && request.auth.uid == request.resource.data.trainerId;
      allow delete: if isAdmin() || (isCoach() && hasActiveCoachSubscription(request.auth.uid) && request.auth.uid == resource.data.trainerId);
    }

    match /metrics/{metricId} {
      allow read: if isSignedIn() && canAccessPair(resource.data.trainerId, resource.data.clientId);
      allow create, update: if isClient() && request.auth.uid == request.resource.data.clientId;
      allow delete: if isAdmin();
    }

    match /coachSubscriptions/{coachId} {
      allow read: if isOwner(coachId) || isSupervisor();
      allow write: if isSupervisor();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
